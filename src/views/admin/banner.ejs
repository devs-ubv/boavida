<%- include('./partials/head'); -%>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <%- include('./partials/sidebar'); -%>
            <!-- ========================= Main ==================== -->
            <div class="main">

                <%- include('./partials/nav'); -%>
                    <!-- ======================= conteúdo do usuario ================== -->
                    <div class="cont">
                        <div class="cardHeader">
                            <!-- ======= Apresentação das Banners ======= -->
                            <div class="notices">
                                <div class="notice" id="id-banner" data-content="<%=bannerId %>"></div>
                                <div class="flex justify-center align-center">
                                    <div class="header-new">
                                        <div class="banner_header"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>
    <%- include('./partials/footer'); -%>
    <script>
        $(document).ready(function () {
            var bannerId = $("#id-banner").data('content');
        if(bannerId){
            listOneBanner(bannerId);
        }
        function listOneBanner(){
            console.log("BANNER ID ",bannerId);
            if(bannerId){
                $.ajax({
                    url: `/banner/${bannerId}`,
                    method: 'GET',
                    success: function (response) {
                        populateBanner(response);
                    },
                    error: function (e) {
                        console.log(e.responseText);
                    }
                });
            }
        }

        function populateBanner(data) {
            console.log(data.cover);
            $('.banner_header').append(
                `
                    <img src="/assets/img/banner/${data?.banner}"/>
                    <h1>${data?.title}</h1>
                `
            );
        }
    });
    </script>