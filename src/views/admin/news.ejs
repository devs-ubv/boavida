<%- include('./partials/head'); -%>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <%- include('./partials/sidebar'); -%>
            <!-- ========================= Main ==================== -->
            <div class="main">

                <%- include('./partials/nav'); -%>
                    <!-- ======================= conteúdo do usuario ================== -->
                <div class="news">
                    <div class="tittle">
                        <h3>Adicione ou edite as notícias do site</h3>
                        <button id="myBtn" class="btn">Adicionar Nova Notícia</button>
                    </div>
                    <div class="cardHeader">
                        <!-- ======= Modal para criação do usuário ======= -->
                        <div id="myModal" class="modal-news">
                            <!-- Modal content -->
                            <div class="modal-content-news">
                                <div class="modal-header">
                                    <h2>Criar Nova Notícia</h2>
                                    <span class="close">&times;</span>
                                </div>
                                <div class="modal-body">
                                    <h2>Adicionar Nova Notícia</h2>
                                    <form class="inputs" id="news-form">
                                        <div class="sub-input">
                                            <input type="Text" name="title" placeholder="Titulo da Notícia">
                                        </div> 
                                        <div class="sub-input">
                                            <input type="text" name="typeOfNew" placeholder="Tipo de Notícia">
                                            <input type="date" name="datePublished">
                                        </div>  
                                        <!-- ======= Carregar a imagem de capa da Noticia ======= -->
                                        <div class="newsCover">
                                            <label class="picture-newsCover" for="picture__input-newsCover" tabIndex="0">
                                                <span class="picture__image-newsCover"></span>
                                            </label>
                                            <input type="file" name="cover" id="picture__input-newsCover">
                                        </div>
                                        <!-- ======= Carregar as imagens secundarias da Noticia ======= -->
                                        <div class="newsCover">
                                            <label class="picture-news" for="picture__input-news" tabIndex="0">
                                                <span class="texto"></span>
                                                <span class="picture__image-news"></span>
                                            </label>
                                            <input type="file" name="photos" id="picture__input-news" multiple>
                                        </div>
                                    
                                    </form>
                                    
                                </div>
                                
                                
                                
                                <div class="modal-footer">  
                                    <button id="btn-register-new">Adicionar Notícia</button>
                                </div>
                                
                            </div>
                        </div>
                        <!-- ======= Apresentação das Notícias ======= -->
                        <div class="notices">
                            <div class="notice">
                                <div class="tableNews">
                                    <h1>Noticias Existentes</h1>
                                    <table id="newsList">
                                        <tr>
                                            <th>ID</th>
                                            <th>CAPA</th>
                                            <th>TITULO</th>
                                            <th>TIPO</th>
                                            <th>DATA DE PUBLICAÇÃO</th>
                                            <th colspan="3" style="text-align: center;">AÇÃO</th>
                                        </tr>                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>

    <%- include('./partials/footer'); -%>