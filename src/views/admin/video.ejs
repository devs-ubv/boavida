<%- include('./partials/head'); -%>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <%- include('./partials/sidebar'); -%>
            <!-- ========================= Main ==================== -->
            <div class="main">

                <%- include('./partials/nav'); -%>
                    <!-- ======================= conteúdo do usuario ================== -->
                    <div class="cont">
                        <% if(!videoId){%>
                            <div class="navigationTab">
                                <div>
                                </div>
                                <button id="myBtn">Adicionar Novo vídeo </button>
                            </div>
                            <%}%>
                                <div class="cardHeader">
                                    <!-- ======= Modal para criação do usuário ======= -->
                                    <div id="myModal" class="modal-user">
                                        <!-- Modal content -->
                                        <div class="modal-content-user ">

                                            <div class="modal-header">
                                                <h2>Cadastro de Novo Vídeo</h2>
                                                <span class="close" id="close">&times;</span>
                                            </div>

                                            <div class="modal-body">
                                                <h2 class="tittle text-2xl">Preencha o Formulário</h2>
                                                <form id="video-register">

                                                    <div class="w-full flex flex-col">
                                                        <div class="w-full">
                                                            <input type="text" name="title" class="title input w-full" placeholder="Título do Vídeo">
                                                        </div>
                                                        <div class="w-full">
                                                            <input type="text" name="dataId" class=" dataId w-full" placeholder="Digite Aqui o ID do Vídeo do YouTube">
                                                        </div>
                                                    </div>
                                                    <div class="input_wrap video">
                                                        <label class="picture-video" for="picture-input-video" tabIndex="0">
                                                                <span class="picture-image-video"></span>
                                                            </label>
                                                        <input type="file" name="image" id="picture-input-video" class="input">
                                                    </div>
                                                    <div class="input_wrap">
                                                        <span id="alerta" style="
                                                                    width: 100%; 
                                                                    background-color: #f00; 
                                                                    display: flex; 
                                                                    flex-direction: row; 
                                                                    justify-content: center;    
                                                                    align-items: center; 
                                                                    border-radius: 2px; 
                                                                    padding: 15px; 
                                                                    gap: 10px; 
                                                                    color: #fff;">
                                                                <i class="bi bi-exclamation-circle"></i>
                                                                <p>Por Favor preencha todos os campos</p>
                                                        </span>
                                                    </div>

                                                    <div id="message">
                                                        <div id="message_Content">
                                                            <i class="bi bi-exclamation-circle"></i>
                                                            <p>Por Favor Preencha Todos os Campos!</p>
                                                        </div>
                                                    </div>
                                                    <div id="success">
                                                        <div id="success_Content">
                                                            <i class="bi bi-exclamation-circle"></i>
                                                            <p>Banner Cadastrado Com Sucesso</p>
                                                        </div>
                                                    </div>

                                                    <button type="button" id="register-video">Cadastrar</button>

                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <% if(videoId){%>
                                    <div class="cardHeader">
                                        <!-- ======= Apresentação das Notícias ======= -->
                                        <div class="notices">
                                            <div class="notice" id="id-banner" data-content="<%=videoId %>"></div>
                                            <div class="flex justify-center align-center">
                                                <div class="header-new">
                                                    <div class="news-header"></div>
                                                    <div class="new-photos-content"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } else{  %>

                                        <div class="videoTable">
                                            <h1>Vídeos Cadastrados</h1>
                                            <table id="video-list">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>CAPA</th>
                                                        <th>TÍTULO</th>
                                                        <th>ID DO VÍDEO</th>
                                                        <th>INSERIDO POR:</th>
                                                        <th colspan="3" style="text-align: center;">AÇÕES</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                </tbody>
                                            </table>

                                        </div>



                                        <div class="pagination">
                                            <p>Página » </p>
                                            <a href="#">1</a>
                                            <a href="#">2</a>
                                            <a href="#">3</a>
                                            <a href="#">4</a>
                                            <a href="#">5</a>
                                        </div>
                                        <% } %>
                    </div>
            </div>
    </div>

    <%- include('./partials/footer'); -%>